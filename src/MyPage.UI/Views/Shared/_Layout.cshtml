<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<link href="@Url.Content("~/Content/css/menu.css")" rel="stylesheet" type="text/css" />*@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
</head>
<body>
    <header>
        <div class="menu" id="menu">
            <div class="menu-container" id="menu-container">
                <div class="perfil">
                    <div class="my-photo-wrapper">
                        <img class="my-photo" id="my-photo" src="/img/perfil.png" alt="My perfil photo" />
                    </div>
                    <p class="name" id="name">
                        my page
                    </p>
                </div>

                <div class="menu-items" id="menu-items">
                    <a asp-controller="home" asp-action="index" class="menu-item">
                        @LanguageResource["AboutMenu"]
                    </a>
                    <a asp-controller="projects" asp-action="index" class="menu-item">
                        @LanguageResource["ProjectsMenu"]
                    </a>
                    <div class="menu-languages">
                        <a asp-controller="language" asp-action="change" asp-route-culture="en-US" class="language-link">
                            <img class="menu-language-flag" id="enUS-flag" src="~/img/en-us.svg" />
                        </a>
                        <a asp-controller="language" asp-action="change" asp-route-culture="pt-BR" class="language-link">
                            <img class="menu-language-flag" id="ptBR-flag" src="~/img/pt-br.svg" />
                        </a>
                    </div>
                </div>

                <div class="material-symbols-outlined"
                     id="menu-button-mobile"
                     onclick="handleMobileMenu()">
                    menu
                </div>
            </div>
            <div class="menu-mobile" id="menu-mobile">
                <div class="menu-items-mobile">
                    <a asp-controller="home" asp-action="index" class="menu-item">
                        @LanguageResource["AboutMenu"]
                    </a>
                    <a asp-controller="projects" asp-action="index" class="menu-item">
                        @LanguageResource["ProjectsMenu"]
                    </a>
                </div>
                <div class="menu-languages-mobile">
                    <a asp-controller="language" asp-action="change" asp-route-culture="en-US" class="language-link">
                        <img class="menu-language-flag" id="enUS-flag-mobile" src="~/img/en-us.svg" />
                    </a>
                    <a asp-controller="language" asp-action="change" asp-route-culture="pt-BR" class="language-link">
                        <img class="menu-language-flag" id="ptBR-flag-mobile" src="~/img/pt-br.svg" />
                    </a>
                </div>
            </div>
        </div>
    </header>

    @RenderBody()

    <footer class="contact-external-container" id="contact-external-container">
        <div class="mini-title">@LanguageResource["CONTACT"]</div>
        <div class="contact-container">
            <div class="contact" onclick="window.open('https://github.com/assis402','github')" ;>
                <img class="contact-logo" src="~/img/github.png" />
                <span>Github</span>
                <img class="out-logo" src="~/img/out.png" />
            </div>
            <div class="contact" onclick="window.open('https://www.linkedin.com/in/assisdematheus/','linkedin')">
                <img class="contact-logo" src="~/img/linkedin.png" />
                <span>Linkedin</span>
                <img class="out-logo" src="~/img/out.png" />
            </div>
            <div class="contact email" onclick="">
                <img class="contact-logo" src="~/img/email.png" />
                <span style="font-size: 15px">assis4002@gmail.com</span>
            </div>
        </div>
    </footer>
</body>
</html>


<style>
    body, head {
        font-family: "Poppins", sans-serif;
        font-weight: 300;
    }

    header {
        position: fixed;
        width: 100%;
        top: -5;
        z-index: 10000;
    }

    body {
        margin: 0;
        background: #000000;
        color: white;
    }


    @@media screen and (max-width: 720px) {
        ::-webkit-scrollbar {
            -webkit-appearance: none;
            width: 0;
        }

        body {
            -ms-overflow-style: none;
            scrollbar-width: none;
            overflow-x: hidden;
            max-width: 100%;
        }

        html {
            max-width: 100%;
            overflow-x: hidden;
        }
    }

    a {
        color: white;
        text-decoration: none;
    }

    .menu {
        flex-wrap: wrap;
        display: flex;
        z-index: 10000;
    }

    .menu-container {
        display: flex;
        width: 100%;
        align-items: center;
        background: rgb(0, 0, 0);
        justify-content: space-between;
        padding: 20px;
        z-index: 10000;
        border-bottom: 2px solid rgba(255, 255, 255, 0);
    }

    .menu-items {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: row;
    }

    .menu-mobile {
        padding: 15px;
        padding-top: 0;
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        flex-direction: row;
        background: rgb(0, 0, 0);
        width: 100%;
        opacity: 0;
        height: 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding-bottom: 25px;
    }

    .menu-items-mobile {
        display: flex;
        flex-direction: column;
    }

    #menu-button-mobile {
        display: none;
        cursor: pointer;
        transition: opacity .2s linear;
        -webkit-user-select: none;
        user-select: none;
        -webkit-tap-highlight-color: transparent;
    }

        #menu-button-mobile:hover, #menu-button-mobile:active {
            opacity: 0.6;
        }

    .menu-item {
        align-items: center;
        justify-content: center;
        padding: 8px 12px;
        font-size: 16px;
        transition: opacity .2s linear;
        font-weight: 300;
        -webkit-tap-highlight-color: transparent;
    }

        .menu-item:hover, .menu-item:active {
            opacity: 0.6;
        }

    .perfil {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
    }

    .name {
        font-weight: 700;
        font-size: 20px;
    }

    .my-photo-wrapper {
        display: flex;
    }

    .my-photo {
        border-radius: 100%;
        width: 60px;
        margin-right: 20px;
    }

    .menu-languages {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-left: 20px;
    }

    .menu-languages-mobile {
        display: flex;
        align-items: flex-end;
        justify-content: center;
        gap: 10px;
        height: 100%;
        margin-right: 10px;
    }

    .language-link {
        -webkit-tap-highlight-color: transparent;
    }

    .menu-language-flag {
        height: 28px;
        opacity: 0.6;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 8px;
        transition: opacity .2s linear;
        -webkit-tap-highlight-color: transparent;
    }
        .menu-language-flag:hover, .menu-language-flag:active {
            opacity: 1;
        }

    /*    .menu-language-icon {
            height: 25px;
            opacity: 0.7;
            display: flex;
            justify-content: center;
            align-items: center;
            filter: invert();
        }*/
</style>

<style>
    .contact-external-container {
        padding-top: 40px;
        padding-bottom: 70px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 40px;
    }

    .contact-container {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 50px;
    }

    .mini-title {
        color: #ababab;
        font-weight: 200;
        font-size: 14px;
        letter-spacing: 2;
    }

    .contact {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        font-weight: 500;
        color: #dfdfdf;
        cursor: pointer;
        height: 45px;
        padding: 0 12px;
        transition: background .2s linear;
        -webkit-user-select: none;
        -ms-user-select: none;
        user-select: none;
        -webkit-tap-highlight-color: transparent;
    }

    .email {
        font-size: 15px;
        cursor: text;
    }

    .contact:hover {
        background: #1b1c20;
    }

    .contact-logo {
        height: 25px;
        filter: invert(0.7);
        -webkit-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    .out-logo {
        height: 13px;
        filter: invert(0.7);
        margin-left: -8px;
    }

    @@media (max-width: 720px) {
        .contact-container {
            flex-direction: column;
            gap: 30px;
        }

        .contact-external-container {
            gap: 30px;
        }
    }
</style>

<script>
    menuSwitch();
    window.onscroll = () => scrollFunction();
    window.addEventListener("resize", () => menuSwitch())

    function menuSwitch() {
        if (window.matchMedia("(min-width: 720px)").matches) {
            document.getElementById("menu-items").style.display = "flex";
            document.getElementById("menu-button-mobile").style.display = "none";

            document.getElementById("menu-items").style.flexDirection = "row";
            document.getElementById("menu-items").style.alignItems = "center";
            document.getElementById("menu-items").style.justifyContent = "center";

        } else {
            document.getElementById("menu-items").style.display = "none";
            document.getElementById("menu-button-mobile").style.display = "block";
        }
    }

    function handleMobileMenu() {
        let menuIsOpen = document.getElementById("menu-mobile").style.opacity === "1";
        if (menuIsOpen) {
            document.getElementById("menu-mobile").style.opacity = "0";
            document.getElementById("menu-mobile").style.transition = "opacity .3s linear";

            if (document.body.scrollTop > 20) {
                document.getElementById("menu-container").style.borderBottom = "2px solid rgba(255, 255, 255, 0.1)"
            }

            setTimeout(() => {
                document.getElementById("menu-mobile").style.height = "0";
            }, 300);
        } else {
            document.getElementById("menu-container").style.borderBottom = "2px solid rgba(255, 255, 255, 0.0)"

            document.getElementById("menu-mobile").style.opacity = "1";
            document.getElementById("menu-mobile").style.transition = "opacity .3s linear";

            document.getElementById("menu-mobile").style.height = "auto";
        }
    }

    function scrollFunction() {
        let menuIsOpen = document.getElementById("menu-mobile").style.opacity === "1";

        if (window.pageYOffset > 20 || document.body.scrollTop > 20) {
            document.getElementById("menu-container").style.padding = "0 20px"
            document.getElementById("my-photo").style.width = "0"
            document.getElementById("my-photo").style.marginRight = "5px"

            if (!menuIsOpen) {
                document.getElementById("menu-container").style.borderBottom = "2px solid rgba(255, 255, 255, 0.1)"
            }

            document.getElementById("menu-container").style.transition = "border-bottom .3s linear, padding .3s linear";
            document.getElementById("my-photo").style.transition = "width .3s linear, margin .3s linear";
        } else {
            document.getElementById("menu-container").style.padding = "20px"
            document.getElementById("my-photo").style.width = "60px"
            document.getElementById("my-photo").style.marginRight = "20px";
            document.getElementById("menu-container").style.borderBottom = "2px solid rgba(255, 255, 255, 0)"


            document.getElementById("menu-container").style.transition = "border-bottom .3s linear, padding .3s linear";
            document.getElementById("my-photo").style.transition = "width .3s linear, margin .3s linear";
        }
    }

    function selectLanguageFlag() {
        let culture = "@LanguageResource["Culture"]";

        if (culture === "pt_BR") {
            document.getElementById("ptBR-flag").style.opacity = "1"
            document.getElementById("ptBR-flag-mobile").style.opacity = "1"
        }

        if (culture === "en_US") {
            document.getElementById("enUS-flag").style.opacity = "1"
            document.getElementById("enUS-flag-mobile").style.opacity = "1"
        }
    }
</script>