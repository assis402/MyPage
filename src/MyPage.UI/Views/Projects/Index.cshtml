@using MyPage.Application.Models;
@model ICollection<GitHubRepositoryModel>

<div class="projects-external-container">
    <div class="projects-container">
        @foreach (var project in Model)
        {
            <div class="project">
                <div class="project-content">
                    <div class="project-header">
                        <span class="project-title">@project.Title</span>
                        <div class="project-tags">
                            @foreach (var tag in project.CustomProperties.Tags)
                            {
                                <div class="project-tag">@tag</div>
                            }
                        </div>
                    </div>
                    <div class="project-body">
                        <div class="project-mini-description">@project.CustomProperties.Description</div>
                        <div class="project-links">
                            <div class="project-link">
                                <span>github</span>
                                <img src="~/img/out.png" />
                            </div>
                            <div class="project-link">
                                <span>ver vídeo</span>
                                <img src="~/img/out.png" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="project-bar"></div>
            </div>
        }
        @for (int i = 0; i < 2; i++)
        {
            <div class="project">
                <div class="project-content">
                    <div class="project-header">
                        <span class="project-title">TransactionAPI</span>
                        <div class="project-tags">
                            <div class="project-tag">.NET 7</div>
                            <div class="project-tag">Minimal API</div>
                            <div class="project-tag">MongoDB</div>
                        </div>
                    </div>
                    <div class="project-body">
                        <div class="project-mini-description">Minimal API em C#, com persistência em MongoDB</div>
                        <div class="project-links">
                            <div class="project-link">
                                <span>github</span>
                                <img src="~/img/out.png" />
                            </div>
                            <div class="project-link">
                                <span>ver vídeo</span>
                                <img src="~/img/out.png" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="project-bar"></div>
            </div>
        }
    </div>
</div>

<style>
    .projects-external-container {
        display: flex;
        padding: 130px 0 50px 0;
        justify-content: center;
        align-items: center;
    }

    .projects-container {
        display: flex;
        gap: 20px;
        justify-content: left;
        align-items: center;
        height: 100%;
        flex-wrap: wrap;
        max-width: 1380px;
    }

    .project {
        background: linear-gradient(to bottom, #0c0c0f, #080808);
        height: 300px;
        width: 260px;
        position: relative;
    }

    .project-content {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 20px;
        height: 260px;
    }

    .project-body {
    }

    .project-bar {
        position: absolute;
        bottom: 0;
        height: 1px;
        width: 100%;
        background: purple;
    }
    
    .project-header {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .project-title {
        font-weight: 200;
    }

    .project-mini-description {
        font-weight: 500;
        margin-bottom: 20px;
    }

    .project-tags {
        display: flex;
        gap: 7px;
    }

    .project-tag {
        font-size: 11px;
        border-radius: 30px;
        background-color: #292930;
        padding: 3px 7px;
        border: 1px solid #484747;
        opacity: 0.8;
    }

    .project-links {
        display: flex;
        flex-direction: row;
        gap: 20px;
    }

    .project-link {
        font-size: 13px;
        font-weight: 200;
        display: flex;
        align-items: center;
        line-height: 5px;
        gap: 5px;
        color: #d2d2d2;
    }

    .project-link img {
        filter: invert(0.5);
        height: 10px;
    }

    @@media screen and (max-width: 1430px) {
        .projects-container {
            max-width: 1100px;
        }
    }

    @@media screen and (max-width: 1150px) {
        .projects-container {
            max-width: 820px;
        }
    }

    @@media screen and (max-width: 870px) {
        .projects-container {
            max-width: 540px;
        }
    }

    @@media screen and (max-width: 570px) {
        .projects-container {
            justify-content: center;
            /*max-width: 390px;*/
            padding: 0 20px;
        }

        .project-content {
            height: 180px;
        }

        .project {
            height: 220px;
            width: 100%;
        }
    }
</style>

<script>
    window.onload = () => {
        selectLanguageFlag();
        changeFooterBackground();
    };

    function changeFooterBackground() {
        document.getElementById("contact-external-container").style.background = "linear-gradient(to right, #060708, #18181c)"
    }
</script>