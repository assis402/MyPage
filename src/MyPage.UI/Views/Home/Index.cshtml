<div class="about-external-container">
    <div class="about-container">
        <div class="about-minified">
            <p class="about-title">@LanguageResource["AboutTitle_Greeting"] <br /> <b>@LanguageResource["AboutTitle_Name"]</b></p>
            <div class="main-stack">
                <div class="main-stack-header">
                    <p class="main-stack-title">
                        @LanguageResource["MainStackTitle"]
                    </p>
                    <p class="main-stack-body">
                        @LanguageResource["MainStackBody"]
                    </p>
                </div>
                <div class="main-stack-footer">
                    <img class="tech-icon" src="/img/c-sharp.png" alt="C#" />
                    <img class="tech-icon" src="/img/dotnet.png" alt=".NET" />
                </div>
            </div>
        </div>
        <div class="presentation" id="presentation">
            <p class="presentation-text">
                @LanguageResource["PresentationText"]
            </p>
            <div class="presentation-buttons">
                <div class="about-button" onclick="showAbout()">
                    <img class="about-icon" src="~/img/info.png" />
                    <div class="inner-button">@LanguageResource["AboutButton"]</div>
                </div>
                <div class="projects-button" onclick="">
                    <img class="projects-icon" src="~/img/projects.png" />
                    <div class="inner-button">@LanguageResource["ProjectsButton"]</div>
                </div>
            </div>
        </div>
        <div id="about-body-container">
            <p class="about-body" id="about-body-1">
                @LanguageResource["AboutBody_01"]
                <span class="emphasis">@LanguageResource["AboutEmphases_01"]</span>
            </p>
            <p class="about-body" id="about-body-2">
                @LanguageResource["AboutBody_02"] <span class="emphasis">Angular</span>@LanguageResource["AboutBody_02.1"]
                <span class="emphasis"> @LanguageResource["AboutEmphases_02"]</span>
            </p>
            <p class="about-body" id="about-body-3">
                @LanguageResource["AboutBody_03"]
            </p>
            <div class="presentation-buttons second-buttons">
                <div class="about-button second-button" onclick="">
                    <img class="projects-icon" src="~/img/projects.png" />
                    <div class="inner-button">@LanguageResource["SecondProjectsButton"]</div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="timeline-external-container">
    <div class="timeline-container">
        <div class="mini-title">@LanguageResource["Background"]</div>
        <div class="timeline-body">
            <div class="timeline-exp">
                <div class="timeline-exp-date">@LanguageResource["LabsitDate_02"]</div>
                <div class="timeline-exp-circle labsit-full-circle"></div>
                <div class="timeline-exp-title">
                    @LanguageResource["LabsitTitle_02"]
                    <div class="timeline-exp-subtitle">@LanguageResource["LabsitSubtitle_02"]</div>
                </div>
            </div>
            <div class="timeline-bar labsit-bar"></div>
            <div class="timeline-exp-wrapper">
                <div class="timeline-exp">
                    <div class="timeline-exp-date">@LanguageResource["LabsitDate_01"]</div>
                    <div class="timeline-exp-circle labsit-border-circle"></div>
                    <div class="timeline-exp-title">
                        @LanguageResource["LabsitTitle_01"]
                        <div class="timeline-exp-subtitle">@LanguageResource["LabsitSubtitle_01"]</div>
                    </div>
                </div>
                <div class="timeline-company" onclick="window.open('https://labsit.io/','labsit')">
                    <span class="material-symbols-outlined company-icon" title="@LanguageResource["Company"]">
                        work
                    </span>
                    <span title="@LanguageResource["Company"]">Labsit</span>
                    <img class="mini-out-logo" src="~/img/out.png" />
                    <span class="timeline-company-arrow labsit-arrow"></span>
                </div>
                <div class="timeline-bar labsit-bar"></div>
            </div>
            <div class="timeline-exp margin-top">
                <div class="timeline-exp-date">@LanguageResource["FitbankDate_02"]</div>
                <div class="timeline-exp-circle fitbank-full-circle"></div>
                <div class="timeline-exp-title">
                    @LanguageResource["FitbankTitle_02"]
                    <div class="timeline-exp-subtitle">@LanguageResource["FitbankSubtitle_02"]</div>
                </div>
            </div>
            <div class="timeline-bar fitbank-bar"></div>
            <div class="timeline-exp-wrapper">
                <div class="timeline-exp">
                    <div class="timeline-exp-date">@LanguageResource["FitbankDate_01"]</div>
                    <div class="timeline-exp-circle fitbank-border-circle"></div>
                    <div class="timeline-exp-title">
                        @LanguageResource["FitbankTitle_01"]
                        <div class="timeline-exp-subtitle">@LanguageResource["FitbankSubtitle_01"]</div>
                    </div>
                </div>
                <div class="timeline-company" onclick="window.open('https://fitbank.com.br/','fitbank')">
                    <span class="material-symbols-outlined company-icon" title="@LanguageResource["Company"]">
                        work
                    </span>
                    <span title="@LanguageResource["Company"]">FitBank</span>
                    <img class="mini-out-logo" src="~/img/out.png" />
                    <span class="timeline-company-arrow fitbank-arrow"></span>
                </div>
                <div class="timeline-bar fitbank-bar"></div>
            </div>
        </div>
    </div>
</div>
<style>
    .about-external-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
    }

    .about-container {
        padding: 0 5%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        padding-top: 150px;
        padding-bottom: 70px;
    }

    .presentation {
        margin: 0 10%;
        max-width: 850px;
        text-align: center;
    }

    .presentation-text {
        font-weight: 200;
    }

    #about-body-container {
        padding: 0 10%;
        opacity: 0;
        height: 0;
        transition: opacity .2s linear;
        max-width: 1100px;
    }

    .about-minified {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 60px;
        height: 165px;
        padding-bottom: 50px;
    }

    .about-title {
        margin: 0;
        text-align: right;
        font-size: 45px;
        font-weight: 200;
        display: flex;
        justify-content: space-around;
        flex-direction: column;
        height: 165px;
    }

    .main-stack {
        display: flex;
        background: linear-gradient(to right, #070808, #18181c);
        align-items: center;
        flex-direction: column;
        justify-content: space-around;
        height: 140px;
        padding: 15px 30px;
        background-color: #0c0c0c;
        z-index: -1;
    }

    .main-stack-header {
        text-align: center;
    }

    .main-stack-footer {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        gap: 10px;
    }

    .main-stack-title {
        font-weight: 200;
        color: #dfdfdf;
        font-size: 14px;
        margin: 0;
    }

    .main-stack-body {
        font-size: 22px;
        margin: 0;
        font-weight: 500;
    }

    .tech-icon {
        z-index: -1;
        height: 50px;
        transition: filter .2s linear;
    }

    .about-body {
        text-align: left;
        font-weight: 200;
        color: #dfdfdf;
        height: 0;
    }

    .emphasis {
        font-weight: 500;
        color: white;
    }

    .presentation {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        transition: opacity .2s linear;
        gap: 30px;
    }

    .presentation-buttons {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 40px;
    }

    .about-button {
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        width: 150px;
        height: 40px;
        transition: opacity .2s linear, color .2s linear;
        font-weight: 500;
        color: white;
        gap: 12px;
        line-height: 20px;
        background: linear-gradient(to right, #27006a, #541db1);
        opacity: 0.85;
        -webkit-user-select: none;
        -ms-user-select: none;
        user-select: none;
        padding: 0 3px;
    }

    .projects-button {
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        width: 150px;
        height: 40px;
        transition: opacity .2s linear, color .2s linear, border .2s linear;
        font-weight: 500;
        color: white;
        gap: 12px;
        line-height: 20px;
        border: 1px solid #1b1b1b;
        opacity: 0.85;
        -webkit-user-select: none;
        -ms-user-select: none;
        user-select: none;
        padding: 0 5px;
        -webkit-tap-highlight-color: transparent;
    }

    .about-button:hover {
        opacity: 1;
    }

    .projects-button:hover {
        opacity: 1;
        border: 1px solid #424141;
    }

    .second-buttons {
        margin-top: 40px;
    }

    .second-button {
        width: auto;
        padding: 5px 15px;
    }

    .about-icon {
        height: 20px;
        filter: invert(0.8);
    }

    .projects-icon {
        height: 20px;
        filter: invert(0.8);
    }

    @@media (max-width: 1200px) {
        .about-title {
            font-size: 40px;
        }

        .main-stack-body {
            font-size: 18px;
        }

        .main-stack-title {
            font-size: 10px;
        }
    }

    @@media (max-width: 900px) {
        .about-title {
            font-size: 35px;
        }
    }

    @@media (max-width: 800px) {
        .about-title {
            font-size: 32px;
        }
    }

    @@media (max-width: 720px) {
        #about-body-container {
            padding: 0 8%;
        }

        .about-minified {
            flex-direction: column;
            height: auto;
            gap: 10px;
            width: 100%;
            padding-bottom: 30px;
        }

        .about-title {
            text-align: left;
            justify-content: center;
        }

        .about-container {
            padding: 0 0;
            display: flex;
            align-items: center;
            justify-content: flex-start;
            flex-direction: column;
            margin-top: 23%;
            margin-bottom: 17%;
        }

        .about-external-container {
            min-height: auto;
        }

        .main-stack {
            width: 100%;
            height: 150px;
        }

        .presentation-buttons {
            gap: 10%;
        }
    }
</style>

