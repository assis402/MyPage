<script>
    window.onload = () => selectLanguageFlag();

    function showAbout() {
        document.getElementById("presentation").style.opacity = "0";
        document.getElementById("presentation").style.cursor = "default";

        setTimeout(() => {
            document.getElementById("presentation").style.height = "0";
        }, 200)

        setTimeout(() => {
            document.getElementById("about-body-container").style.height = "auto";
            document.getElementById("about-body-1").style.height = "auto";
            document.getElementById("about-body-2").style.height = "auto";
            document.getElementById("about-body-3").style.height = "auto";
            document.getElementById("about-body-container").style.opacity = "1";
        }, 200)
    }
</script>