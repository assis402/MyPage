@using MyPage.Application.Models.PartialViews;
@model SkillModel;

<div class="skill">
    <p>@Model.Title</p>
    <div class="skill-bar" style="transition-delay: @(Model.AnimationDelay)ms">
        <span class="skill-gaps">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </span>
        @for (int i = 1; i <= 5; i++)
        {
            <div class="@(i > Model.Level ? "skill-nolevel" : "")"></div>
        }
    </div>
</div>